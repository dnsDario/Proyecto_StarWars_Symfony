{% extends 'base.html.twig' %}


{% block films %}

<div class="row row-cols-1 row-cols-md-2 mt-3 d-flex justify-content-around" style="width: 100vw; height: 1500px; background-color: black;">

	{% for film in films %}
		<div class="card" style="width: 18rem; height:550px; margin: 20px; background-color: black;">
			<h4 class="card-header" style="color: white; height: 70px;">{{film.title}}</h4>
			<img src="{{film.image}}" alt="film" class="card-img-top" style="height:400px; object-fit: cover;">
			<div class="card-body">
				<p class="card-text" style="overflow:hidden; display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 5; color: white;">{{film.openingCrawl}}</p>
			</div>
		</div>
	{% endfor %}

</div>
{% endblock %}
