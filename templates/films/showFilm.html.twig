{% extends 'base.html.twig' %}
{% block stylesheets %} <link rel="stylesheet" href="{{ asset('css/styles.css') }}"> {% endblock %}
{% block showFilm %}
	<div class="row row-cols-1 row-cols-md-2 mt-3 d-flex flex-column justify-content-center align-items-center" style="width: 95vw; height: auto; background-color: black;">
		<h2 style="color: yellow; font-size: clamp(26px, 3.5vw, 48px); font-family: 'Montserrat', sans-serif; font-weight: 500;">{{film.title}}</h2>
		<div class="tarjet">
			<div class="imgTarjet">
				<img src="{{(film.image)}}" alt="film">
			</div>
			<div class="textTarjet">
					<p><strong>Episodio nยบ :</strong>
						{{film.episodeId}}</p>
					<p><strong>Director :</strong>
						{{film.director}}</p>
					<p><strong>Producido por :</strong>
						{{film.producer}}</p>
					<p><strong>Fecha de estreno :</strong>
						{{film.releaseDate}}</p>
					<p style="font-size: 14px;">{{film.openingCrawl}}</p>
			</div>
		</div>

		<h3 style="width: 90%; font-size: clamp(24px, 2.5vw, 32px); margin-top:20px; text-align: left; color:yellow; font-family: 'Montserrat', sans-serif; font-weight: 600;">Planetas en
			{{film.title}}</h3>
		<div class="collections">
			{% for planet in film.planets %}
				<div class="card" >
					<h4 class="card-header" style="color: white; height: 70px; font-size:16px;">{{planet.name}}</h4>
					<a href="{{path("showPlanet", {"id": planet.id})}} ">
						<img src="{{planet.image}}" alt="planet" class="card-img-top">
					</a>
					<div
						style="display: flex; width: 100%; justify-content: space-evenly; ">
						{% if is_granted('ROLE_ADMIN') %}
						<a href="{{path("editPlanet", {"id":planet.id})}}" class="btn btn-success" style="padding: 0px; width: 55px">Editar</a>
						<a href="{{path("deletePlanet", {"id":planet.id})}}" class="btn btn-danger" style="padding: 0px; width: 55px">Borrar</a>
						{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>
		<h3 style="width: 90%; font-size: clamp(24px, 2.5vw, 32px); margin-top:30px; text-align: left; color:yellow; font-family: 'Montserrat', sans-serif; font-weight: 600;">Naves Espaciales en
			{{film.title}}</h3>
		<div class="collections">
			{% for starship in film.starships %}
				<div class="card">
					<h4 class="card-header" style="color: white; height: 70px; font-size:16px;">{{starship.name}}</h4>
					<a href="{{path("showStarship",{"id":starship.id})}}">
						<img src="{{starship.image}}" alt="starship" class="card-img-top">
					</a>
					<div
						style="display: flex; width: 100%; justify-content: space-evenly;">
						{% if is_granted('ROLE_ADMIN') %}
						<a href="{{path("editStarship", {"id":starship.id})}}" class="btn btn-success" style="padding: 0px; width: 55px">Editar</a>
						<a href="{{path("deleteStarship", {"id":starship.id})}}" class="btn btn-danger" style="padding: 0px; width: 55px">Borrar</a>
						{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>

		<h3 style="width: 90%; font-size: clamp(24px, 2.5vw, 32px); margin-top:30px; text-align: left; color:yellow; font-family: 'Montserrat', sans-serif; font-weight: 600;">Personajes en
			{{film.title}}:</h3>

		<div class="collections">
			{% for character in film.characters %}
				<div class="card">
					<h4 class="card-header" style="color: white; height: 70px; font-size:16px;">{{character.name}}</h4>
					<a href="{{path("showCharacter",{"id":character.id})}}" >
						<img src="{{character.image}}" alt="character">
					</a>
					<div
						style="display: flex; width: 100%; justify-content: space-evenly; margin-top: 10px;">
						{% if is_granted('ROLE_ADMIN') %}
						<a href="{{path("editCharacter", {"id":character.id})}}" class="btn btn-success" style="padding: 0px; width: 55px">Editar</a>
						<a href="{{path("deleteCharacter", {"id":character.id})}}" class="btn btn-danger" style="padding: 0px; width: 55px">Borrar</a>
						{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}

