{% extends 'base.html.twig' %}
{% block stylesheets %} <link rel="stylesheet" href="{{ asset('css/styles.css') }}"> {% endblock %}

{% block starships %}

	<div class="collections row row-cols-1 row-cols-md-2 mt-3 d-flex" style="width: 90%; height: auto; background-color: black; color">
		{% for starships in starships %}
			{% if starships.image %}
				<div class="card d-flex align-items-center text-center" style="width: 15rem; height:auto; margin: 15px; background-color: black;">
					<h4 class="card-header" style="color: white; height: 40px;">{{starships.name}}</h4>
					<a href="{{path("showStarship",{"id":starships.id})}}" class="" style="padding: 0px; width: auto; height: auto;">
						<img src="{{starships.image}}" alt="starships" class="imgCollection card-img-top" style="width: 90%; height:350px; object-fit: contain;">
					</a>
					<div
						style="display: flex; width: 100%; justify-content: space-around; ">
						{% if is_granted('ROLE_ADMIN') %}
						<a href="{{path("editStarship", {"id":starships.id})}}" class="btn btn-success" style="padding: 0px; width: 55px">Editar</a>
						<a href="{{path("deleteStarship", {"id":starships.id})}}" class="btn btn-danger" style="padding: 0px; width: 55px">Borrar</a>
						{% endif %}
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div>
{% endblock %}