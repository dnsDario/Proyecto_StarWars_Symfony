{% extends 'base.html.twig' %}
{% block stylesheets %} <link rel="stylesheet" href="{{ asset('css/styles.css') }}"> {% endblock %}
{% block showStarship %}
<div class="row row-cols-1 row-cols-md-2 mt-3 d-flex flex-column justify-content-center align-items-center" style="width: 95vw; height: auto; background-color: black;">
		<h2 style="color: yellow; font-size: 36px; font-family: 'Montserrat', sans-serif; font-weight: 500;">{{starship.name}}</h2>
		<div class="tarjet">
			<div class="imgTarjet">
				<img src="{{(starship.image)}}" alt="film">
			</div>
			<div class="textTarjet">
                    <p><strong>Modelo :</strong> {{starship.model}}</p>
                    <p><strong>Fabricada por :</strong> {{starship.manufacturer}}</p>
                    <p><strong>Diámetro :</strong> {{starship.length}} metros</p>
                    <p><strong>Coste :</strong> {{starship.costInCredits}} créditos imperiales</p>  
                    <p><strong>Velocidad en atmósfera :</strong> {{starship.maxAtmospheringSpeed}} m/s</p>
                    <p><strong>Capacidad de tripulación :</strong> {{starship.passengers}}</p>  
                    <p><strong>Capacidad de carga :</strong> {{starship.cargoCapacity}}</p>
                </div>
            </div>
        </div>


    <h3 style="width: 95%; margin-top:30px; text-align: left; color:yellow; font-family: 'Montserrat', sans-serif; font-weight: 600;">Películas en las que aparece {{starship.name}}</h3>
        <div class="collections">
            {% for film in starship.films %}
                    <div class="card">
                        <h4 class="card-header" style="color: white; height: 70px; font-size: 16px;">{{film.title}}</h4>
                        <a href="{{path("showFilm",{"id":film.id})}}">
                            <img src="{{film.image}}" alt="film" class="card-img-top">
                        </a>
                        <div style="display: flex; width: 100%; justify-content: space-evenly; margin-top: 10px;">
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{path("editFilm", {"id":film.episodeId})}}" class="btn btn-success" style="padding: 0px; width: 55px">Editar</a>
                            <a href="{{path("deleteFilm", {"id":film.episodeId})}}" class="btn btn-danger" style="padding: 0px; width: 55px">Borrar</a>
                            {% endif %}
                        </div>
                    </div>
            {% endfor %}
        </div> 
    </div> 
{% endblock %}